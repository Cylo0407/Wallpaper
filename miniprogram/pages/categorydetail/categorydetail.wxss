/** category detail **/
page {
  background: white;
  width: 100%;
  height: 100%;
}

.gridview {
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.item{
  position: relative;
  width: 247rpx;
  height: 360rpx;
  margin-top: 6rpx;
}

.item:first-of-type,
.item:nth-of-type(2),
.item:nth-of-type(3){
  margin-top: 0;
}

.img{
  display: block;
  width: 100%;
  height: 360rpx;
  transform: all .3s;
}